<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Views.PopupPage"
             Title="PopupPage">
 
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="NameLabel" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Label x:Name="PriceLabel" HorizontalOptions="Center"/>
        <Button Text="Löschen" BackgroundColor="#5A4FCF" TextColor="White" Clicked="OnDeleteClicked"/>
        <Button Text="Zurück" BackgroundColor="LightGray" Clicked="OnCancelClicked"/>
    </VerticalStackLayout>
</ContentPage>