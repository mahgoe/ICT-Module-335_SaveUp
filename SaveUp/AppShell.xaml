<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SaveUp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SaveUp"
    xmlns:views="clr-namespace:SaveUp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SaveUp">

    <TabBar>
        <Tab Title="Eintragen" Route="Eintragen" Icon="enter.png">
           <ShellContent ContentTemplate="{DataTemplate views:EntryPage}" />
        </Tab>

        <Tab Title="Start" Route="Start" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Title="Information" Route="Information" Icon="information.png">
            <ShellContent ContentTemplate="{DataTemplate views:InfoPage}" />
        </Tab>
    </TabBar>

    
</Shell>
